<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peipei.sharesdk.MessageActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/btn_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="messageActivity"
        android:text="@string/securitycodesdk" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_message"
        android:onClick="shareActivity"
        android:text="@string/sharesdk" />

</RelativeLayout>